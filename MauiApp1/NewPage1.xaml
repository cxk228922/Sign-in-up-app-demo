<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.NewPage1">
    
<VerticalStackLayout>
        <Label
            Text="Enter your email"
            FontSize="34"
            Margin="500,80,20,0"
            />
        <Entry 
            x:Name="EmailEntry"
            Margin="500,30,400,0"
            />
        <HorizontalStackLayout
            HeightRequest="170"
            Padding="0,0,0,20"
            Spacing="50">
            <Button
                Margin="500,50,0,40"
                FontSize="26"
                Text="Cancel"
                BackgroundColor="#007AFF"
                Clicked="ToHomePage"
                />
            <Button
                Margin="50,50,0,40"
                FontSize="26"
                Text="Send Your Password"
                BackgroundColor="#007AFF"
                Clicked="OnSendPasswordClicked"
                />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>